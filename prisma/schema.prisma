// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Users {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  nama_lengkap   String
  nama           String
  email          String
  ttl            String
  wa             String
  ig             String?
  fb             String?
  shoope         String?
  status         String
  kode_ref       String
  wilayah        String
  kota           String
  alamat_lengkap String
  picture        String?
  password       String?
  date           DateTime
  token          String?
  verification   Int
  points         Points[]
}

model Points {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  users   Users  @relation(fields: [userId], references: [id])
  userId  String @db.ObjectId
  saldo   String
  history String
}

model Products {
  id           String  @id @default(auto()) @map("_id") @db.ObjectId
  product_name String
  quantity     Int
  price        Int
  category     String
  sub          String
  images       String?
  description  String
}

model Categories {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  category String
}

model Banners {
  id        String           @id @default(auto()) @map("_id") @db.ObjectId
  image     String
  dir       String
  attribute AttributBanner[]
}

model AttributBanner {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String?
  alt      String?
  link     String?
  position String?
  text     String?
  bg       String?
  banner   Banners @relation(fields: [bannerId], references: [id])
  bannerId String  @db.ObjectId
}

model Orders {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  invoice     String
  name        String
  wa          String
  alamat      String
  products    String
  order_time  DateTime
  status      String
  total       Int
  ongkir      Int?
  note        String?
  file_upload String?
  resi        String?
}

model Testimonies {
  id  String @id @default(auto()) @map("_id") @db.ObjectId
  img String
}

model ModelData {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  nama  String
  texts String
}
